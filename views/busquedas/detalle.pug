extends ../layout

block content
  h1 Detalle de Búsqueda

  if !busqueda
    p No se encontró la búsqueda.
  else
    h2 #{capitalizar(busqueda.nombre) || '(Sin nombre)'}

    .detalle-box
      p
        span.detail-label Tipo:
        | #{capitalizar(busqueda.tipo)}
      p
        span.detail-label Animal:
        | #{capitalizar(busqueda.animal || 'No especificado')}
      p
        span.detail-label Zona:
        | #{capitalizar(busqueda.zona)}
      p
        span.detail-label Fecha:
        | #{busqueda.fecha ? new Date(busqueda.fecha).toLocaleDateString() : 'No especificada'}
      p
        span.detail-label Descripción:
        | #{busqueda.descripcion || 'No hay descripción'}
      p
        span.detail-label Contacto:
        | #{busqueda.contacto}
      p
        span.detail-label Estado:
        | #{busqueda.activa ? 'Activa' : 'Resuelta'}

    if busqueda.imagen
      img(src=busqueda.imagen, alt=`Imagen de ${busqueda.nombre}`, style="max-width: 300px;")

    a.button-primary(href="/busquedas") ← Volver al listado
