extends ../layout

block content
  h1 B√∫squedas

  // Formulario de filtros
  form(method="GET", style="margin-bottom: 20px; display: flex; gap: 15px; flex-wrap: wrap; align-items: center;")
    // Filtro por nombre
    label(for="nombre") Nombre:
    input(type="text", name="nombre", id="nombre", value=nombreSeleccionado || '', placeholder="Buscar por nombre")

    // Filtro por tipo
    label(for="tipo") Tipo:
    select(name="tipo", id="tipo")
      option(value="") Todos
      option(value="perdida" selected=(tipoSeleccionado === 'perdida')) Perdida
      option(value="encontrada" selected=(tipoSeleccionado === 'encontrada')) Encontrada

    // Filtro por animal
    label(for="animal") Animal:
    select(name="animal", id="animal")
      option(value="") Todos
      option(value="gato" selected=(animalSeleccionado === 'gato')) Gato
      option(value="perro" selected=(animalSeleccionado === 'perro')) Perro

    // Filtro por activa (booleano)
    label(for="activa") Activa:
    select(name="activa", id="activa")
      option(value="") Todos
      option(value="true" selected=(activaSeleccionado === 'true')) S√≠
      option(value="false" selected=(activaSeleccionado === 'false')) No

    button(type="submit") Filtrar

  // Bot√≥n para crear nueva b√∫squeda
  a(href="/busquedas/crear", class="button-primary", style="margin-bottom: 20px; display: inline-block;") ‚ûï Nueva B√∫squeda

  // Lista de b√∫squedas
  if busquedas.length === 0
    p No se encontraron b√∫squedas con esos filtros.
  else
    ul.busquedas-list
      each busqueda in busquedas
        li.busqueda-item
          h3= busqueda.nombre ? busqueda.nombre.charAt(0).toUpperCase() + busqueda.nombre.slice(1) : '(Sin nombre)'
          p
            strong Tipo: 
            | #{busqueda.tipo}
          p
            strong Animal: 
            | #{busqueda.animal || 'No especificado'}
          p
            strong Zona: 
            | #{busqueda.zona}
          p
            strong Activa: 
            | #{busqueda.activa ? 'S√≠' : 'No'}

          // Acciones
          div.acciones(style="margin-top: 10px;")
            a(href=`/busquedas/${busqueda.id}`, style="margin-right: 10px;") üëÅÔ∏è Ver
            a(href=`/busquedas/${busqueda.id}/editar`, style="margin-right: 10px;") ‚úèÔ∏è Editar
            form(method="POST", action=`/busquedas/${busqueda.id}?_method=DELETE`)
              button(type="submit", class="delete", onclick="return confirm('¬øEst√°s seguro de que quer√©s eliminar esta busqueda?')") üóëÔ∏è Eliminar
