doctype html
html(lang="es")
  head
    title Huellitas Felices
    link(rel="icon", href="/favicon.ico" type="image/x-icon")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body
    header
    if usuario
      div.usuario-info
        span
          i.fa-solid.fa-user.user-icon
          | #{capitalizar(usuario.nombre)}
        span
          | Rol: #{usuario.rol}
        a(href=logoutUrl, class="logout-btn", title="Cerrar sesión")
          i.fa-solid.fa-right-from-bracket
          |  Cerrar sesión

    nav.nav-links
      a(href="/home", class="nav-icon", title="Inicio")
        i.fa-solid.fa-house

      div.main-nav-items
        a(href=productosUrl) Productos
        a(href=ventasUrl) Ventas
        a(href=pacientesUrl) Pacientes
        a(href=turnosUrl) Turnos
        a(href=busquedasUrl) Búsquedas
        a(href=usuariosUrl) Usuarios
        a(href=documentacionUrl) Documentación
      a(href=carritoUrl, class="carrito-fijo nav-icon", title="Ver carrito")
        i.fa-solid.fa-cart-shopping
        span.carrito-cantidad= carritoCantidad || 0

    block content
