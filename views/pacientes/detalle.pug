extends ../layout

block content
  h1 Detalle de Paciente

  p
    span.detail-label Id:
    | #{paciente.id || '-'}
  p
    span.detail-label Nombre:
    | #{paciente.nombre || '-'}
  p
    span.detail-label Especie:
    | #{paciente.especie || '-'}
  p
    span.detail-label Raza:
    | #{paciente.raza || '-'}
  p
    span.detail-label Fecha de Nacimiento:
    | #{paciente.fechaNacimiento || '-'}
  p
    span.detail-label Edad:
    | #{paciente.edad != null ? paciente.edad : '-'}
  p
    span.detail-label Responsable:
    | #{responsable && responsable.nombre ? responsable.nombre : '-'}
  p
    span.detail-label Teléfono:
    | #{responsable && responsable.telefono ? responsable.telefono : '-'}
  p
    span.detail-label Email:
    | #{responsable && responsable.email ? responsable.email : '-'}
  p
    span.detail-label Dirección:
    | #{responsable && responsable.direccion ? responsable.direccion : '-'}

  a(href="/pacientes")
    | ← Volver al listado
