extends ../layout

block content
  h2 Detalle de Turno

  p
    span.detail-label Fecha:
    | #{turno.fecha.toLocaleDateString("es-AR")}
  p
    span.detail-label Hora:
    | #{turno.hora}
  p
    span.detail-label Paciente:
    | #{turno.paciente.nombre || "Desconocido"}
  p
    span.detail-label Servicio:
    | #{turno.servicio}

  - const responsable = turno.paciente && turno.paciente.responsable || {};
  
  h3(style="margin-top: 20px;") Contacto del responsable

  p
    span.detail-label Nombre:
    | #{responsable.nombre || "No disponible"}
  p
    span.detail-label Email:
    | #{responsable.email || "No disponible"}
  p
    span.detail-label Teléfono:
    | #{responsable.telefono || "No disponible"}

  a(href="/turnos", style="display:inline-block; margin-top: 20px;") ← Volver al listado
