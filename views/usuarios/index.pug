extends ../layout

block content
  h1 Usuarios

  // Botón para nuevo usuario
  a(href="/usuarios/crear", class="button-primary") ➕ Nuevo Usuario

  ul
    each usuario in usuarios
      li
        h3 #{usuario.nombre} #{usuario.apellido}
        p
          span.detail-label Teléfono:
          |  #{usuario.telefono}
        p
          span.detail-label Dirección:
          |  #{usuario.direccion}
        p
          span.detail-label Correo:
          |  #{usuario.correo}
        p
          span.detail-label Rol:
          |  #{usuario.rol}

        div.acciones
          a(href=`/usuarios/${usuario.id}`) 👁️ Ver
          a(href=`/usuarios/${usuario.id}/editar`) ✏️ Editar
          form(method="POST", action=`/usuarios/${usuario.id}?_method=DELETE`)
            button(type="submit", class="delete", onclick="return confirm('¿Estás seguro de que querés eliminar este usuario?')") 🗑️ Eliminar